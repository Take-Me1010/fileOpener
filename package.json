{
  "name": "file-opener",
  "displayName": "file-opener",
  "description": "an extension to open files with your favorite application.",
  "publisher": "Take-Me1010",
  "repository": {
    "type": "git",
    "url": "https://github.com/Take-Me1010/openPaintDotNet"
  },
  "version": "0.2.1",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "file-opener.open",
        "title": "Open (by file-opener)"
      },
      {
        "command": "file-opener.openFromSelection",
        "title": "Open a file from selection"
      }
    ],
    "menus": {
      "explorer/context": [{
        "when": "!explorerResourceIsFolder",
        "command": "file-opener.open",
        "group": "navigation"
      }],
      "editor/title": [{
        "when": "true",
        "command": "file-opener.open",
        "group": "3_open"
      }]
    },
    "configuration": {
      "title": "file-opener",
      "properties": {
        "file-opener.executorAliasDict": {
          "type": ["object"],
          "description": "Aliases for your executors"
        },
        "file-opener.executorMapByExtension": {
          "type": "object",
          "description": "executor map by the extension of the file."
        },
        "file-opener.executeInTerminal": {
          "type": "boolean",
          "default": false,
          "description": "if true, execute it in VSCode terminal. default to false."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "glob": "^7.1.6",
    "mocha": "^8.0.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.4.0"
  }
}
