{
  "name": "open-paint-dot-net",
  "displayName": "open-paint-dot-net",
  "description": "a extension to open an image in paintDotNet.",
  "publisher": "Take-Me1010",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "open-paint-dot-net.openImage",
        "title": "Open Image (paintDotNet)"
      }
    ],
    "menus": {
      "explorer/context": [{
        "when": "!explorerResourceIsFolder || resourceFilename == images",
        "command": "open-paint-dot-net.openImage",
        "group": "navigation"
      }],
      "editor/title": [{
        "when": "true",
        "command": "open-paint-dot-net.openImage",
        "group": "3_open"
      }]
    },
    "configuration": {
      "title": "open-paint-dot-net",
      "properties": {
        "open-paint-dot-net.executor-path": {
          "type": ["string", "null"],
          "default": null,
          "description": "executor path for paintDotNet. set path/to/paintDotNet.exe. default to 'paintDotNet.exe'."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "glob": "^7.1.6",
    "mocha": "^8.0.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.4.0"
  }
}
