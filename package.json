{
  "name": "file-opener",
  "displayName": "File-Opener",
  "description": "an extension to open files with your favorite application!",
  "publisher": "Take-Me1010",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Take-Me1010/fileOpener"
  },
  "icon": "image/icon.png",
  "version": "0.4.0",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "file-opener.open",
        "title": "Open (by file-opener)"
      },
      {
        "command": "file-opener.openFromSelection",
        "title": "Open from selection (by file-opener)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "!explorerResourceIsFolder",
          "command": "file-opener.open",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "when": "true",
          "command": "file-opener.open",
          "group": "3_open"
        }
      ],
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "file-opener.openFromSelection",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "file-opener",
      "properties": {
        "file-opener.executorAliasDict": {
          "type": [
            "object"
          ],
          "description": "Aliases for your executors. See [README.md](https://github.com/Take-Me1010/fileOpener/blob/main/README.md)"
        },
        "file-opener.executorMapByExtension": {
          "type": "object",
          "description": "executor map by the extension of the file. See [README.md](https://github.com/Take-Me1010/fileOpener/blob/main/README.md)"
        },
        "file-opener.executeInTerminal": {
          "type": "boolean",
          "default": false,
          "description": "if true, execute it in VSCode terminal. default to false."
        },
        "file-opener.commandToOpenDefaultApp": {
          "type": "string",
          "default": "start",
          "description": "The default command to open files by default application. `start` is default command for Windows. Also `open` is one for Linux. Set your default command depending on your environment."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "glob": "^7.1.6",
    "mocha": "^8.0.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.4.0"
  }
}